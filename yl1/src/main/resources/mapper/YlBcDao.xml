<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slwx.dao.YlBcDao">

    <resultMap type="com.slwx.entity.YlBc" id="YlBcMap">
        <result property="bcid" column="Bcid" jdbcType="LONG INTEGER"/>
        <result property="bcname" column="Bcname" jdbcType="LONG INTEGER"/>
        <result property="bfid" column="Bfid" jdbcType="LONG INTEGER"/>
        <result property="bfy" column="Bfy" jdbcType="INTEGER"/>
        <result property="bczt" column="Bczt" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="YlBcMap">
        select
          Bcid, Bcname, Bfid, Bfy, Bczt
        from db_1023.yl_bc
        where Bcid = #{bcid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="YlBcMap">
        select
          Bcid, Bcname, Bfid, Bfy, Bczt
        from db_1023.yl_bc
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="YlBcMap">
        select
          Bcid, Bcname, Bfid, Bfy, Bczt
        from db_1023.yl_bc
        <where>
            <if test="bcid != null">
                and Bcid = #{bcid}
            </if>
            <if test="bcname != null">
                and Bcname = #{bcname}
            </if>
            <if test="bfid != null">
                and Bfid = #{bfid}
            </if>
            <if test="bfy != null">
                and Bfy = #{bfy}
            </if>
            <if test="bczt != null">
                and Bczt = #{bczt}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="bcid" useGeneratedKeys="true">
        insert into db_1023.yl_bc(Bcname, Bfid, Bfy, Bczt)
        values (#{bcname}, #{bfid}, #{bfy}, #{bczt})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update db_1023.yl_bc
        <set>
            <if test="bcname != null">
                Bcname = #{bcname},
            </if>
            <if test="bfid != null">
                Bfid = #{bfid},
            </if>
            <if test="bfy != null">
                Bfy = #{bfy},
            </if>
            <if test="bczt != null">
                Bczt = #{bczt},
            </if>
        </set>
        where Bcid = #{bcid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from db_1023.yl_bc where Bcid = #{bcid}
    </delete>

</mapper>