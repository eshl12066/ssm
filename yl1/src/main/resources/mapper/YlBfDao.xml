<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slwx.dao.YlBfDao">

    <resultMap type="com.slwx.entity.YlBf" id="YlBfMap">
        <result property="bfid" column="Bfid" jdbcType="LONG INTEGER"/>
        <result property="bfname" column="Bfname" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="YlBfMap">
        select
          Bfid, Bfname
        from db_1023.yl_bf
        where Bfid = #{bfid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="YlBfMap">
        select
          Bfid, Bfname
        from db_1023.yl_bf
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="YlBfMap">
        select
          Bfid, Bfname
        from db_1023.yl_bf
        <where>
            <if test="bfid != null">
                and Bfid = #{bfid}
            </if>
            <if test="bfname != null and bfname != ''">
                and Bfname = #{bfname}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="bfid" useGeneratedKeys="true">
        insert into db_1023.yl_bf(Bfname)
        values (#{bfname})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update db_1023.yl_bf
        <set>
            <if test="bfname != null and bfname != ''">
                Bfname = #{bfname},
            </if>
        </set>
        where Bfid = #{bfid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from db_1023.yl_bf where Bfid = #{bfid}
    </delete>

</mapper>