<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slwx.dao.YlRPerDao">

    <resultMap type="com.slwx.entity.YlRPer" id="YlRPerMap">
        <result property="jpid" column="Jpid" jdbcType="LONG INTEGER"/>
        <result property="jid" column="Jid" jdbcType="LONG INTEGER"/>
        <result property="perid" column="Perid" jdbcType="LONG INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="YlRPerMap">
        select
          Jpid, Jid, Perid
        from db_1023.yl_r_per
        where Jpid = #{jpid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="YlRPerMap">
        select
          Jpid, Jid, Perid
        from db_1023.yl_r_per
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="YlRPerMap">
        select
          Jpid, Jid, Perid
        from db_1023.yl_r_per
        <where>
            <if test="jpid != null">
                and Jpid = #{jpid}
            </if>
            <if test="jid != null">
                and Jid = #{jid}
            </if>
            <if test="perid != null">
                and Perid = #{perid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="jpid" useGeneratedKeys="true">
        insert into db_1023.yl_r_per(Jid, Perid)
        values (#{jid}, #{perid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update db_1023.yl_r_per
        <set>
            <if test="jid != null">
                Jid = #{jid},
            </if>
            <if test="perid != null">
                Perid = #{perid},
            </if>
        </set>
        where Jpid = #{jpid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from db_1023.yl_r_per where Jpid = #{jpid}
    </delete>

</mapper>