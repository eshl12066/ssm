<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slwx.dao.YlSsDao">

    <resultMap type="com.slwx.entity.YlSs" id="YlSsMap">
        <result property="ssid" column="Ssid" jdbcType="LONG INTEGER"/>
        <result property="ihno" column="IHno" jdbcType="LONG INTEGER"/>
        <result property="ssname" column="Ssname" jdbcType="VARCHAR"/>
        <result property="dno" column="Dno" jdbcType="LONG INTEGER"/>
        <result property="mtime" column="Mtime" jdbcType="TIMESTAMP"/>
        <result property="ssmoney" column="Ssmoney" jdbcType="INTEGER"/>
        <result property="sszt" column="Sszt" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="YlSsMap">
        select
          Ssid, IHno, Ssname, Dno, Mtime, Ssmoney, Sszt
        from db_1023.yl_ss
        where Ssid = #{ssid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="YlSsMap">
        select
          Ssid, IHno, Ssname, Dno, Mtime, Ssmoney, Sszt
        from db_1023.yl_ss
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="YlSsMap">
        select
          Ssid, IHno, Ssname, Dno, Mtime, Ssmoney, Sszt
        from db_1023.yl_ss
        <where>
            <if test="ssid != null">
                and Ssid = #{ssid}
            </if>
            <if test="ihno != null">
                and IHno = #{ihno}
            </if>
            <if test="ssname != null and ssname != ''">
                and Ssname = #{ssname}
            </if>
            <if test="dno != null">
                and Dno = #{dno}
            </if>
            <if test="mtime != null">
                and Mtime = #{mtime}
            </if>
            <if test="ssmoney != null">
                and Ssmoney = #{ssmoney}
            </if>
            <if test="sszt != null">
                and Sszt = #{sszt}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="ssid" useGeneratedKeys="true">
        insert into db_1023.yl_ss(IHno, Ssname, Dno, Mtime, Ssmoney, Sszt)
        values (#{ihno}, #{ssname}, #{dno}, #{mtime}, #{ssmoney}, #{sszt})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update db_1023.yl_ss
        <set>
            <if test="ihno != null">
                IHno = #{ihno},
            </if>
            <if test="ssname != null and ssname != ''">
                Ssname = #{ssname},
            </if>
            <if test="dno != null">
                Dno = #{dno},
            </if>
            <if test="mtime != null">
                Mtime = #{mtime},
            </if>
            <if test="ssmoney != null">
                Ssmoney = #{ssmoney},
            </if>
            <if test="sszt != null">
                Sszt = #{sszt},
            </if>
        </set>
        where Ssid = #{ssid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from db_1023.yl_ss where Ssid = #{ssid}
    </delete>

</mapper>