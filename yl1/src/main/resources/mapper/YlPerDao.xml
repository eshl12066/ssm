<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slwx.dao.YlPerDao">

    <resultMap type="com.slwx.entity.YlPer" id="YlPerMap">
        <result property="perid" column="Perid" jdbcType="LONG INTEGER"/>
        <result property="pername" column="Pername" jdbcType="VARCHAR"/>
        <result property="url" column="Url" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="YlPerMap">
        select
          Perid, Pername, Url
        from db_1023.yl_per
        where Perid = #{perid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="YlPerMap">
        select
          Perid, Pername, Url
        from db_1023.yl_per
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="YlPerMap">
        select
          Perid, Pername, Url
        from db_1023.yl_per
        <where>
            <if test="perid != null">
                and Perid = #{perid}
            </if>
            <if test="pername != null and pername != ''">
                and Pername = #{pername}
            </if>
            <if test="url != null and url != ''">
                and Url = #{url}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="perid" useGeneratedKeys="true">
        insert into db_1023.yl_per(Pername, Url)
        values (#{pername}, #{url})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update db_1023.yl_per
        <set>
            <if test="pername != null and pername != ''">
                Pername = #{pername},
            </if>
            <if test="url != null and url != ''">
                Url = #{url},
            </if>
        </set>
        where Perid = #{perid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from db_1023.yl_per where Perid = #{perid}
    </delete>

</mapper>