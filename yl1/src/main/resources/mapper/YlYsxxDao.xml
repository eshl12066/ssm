<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slwx.dao.YlYsxxDao">

    <resultMap type="com.slwx.entity.YlYsxx" id="YlYsxxMap">
        <result property="dno" column="Dno" jdbcType="LONG INTEGER"/>
        <result property="dname" column="Dname" jdbcType="VARCHAR"/>
        <result property="dage" column="Dage" jdbcType="INTEGER"/>
        <result property="sname" column="Sname" jdbcType="VARCHAR"/>
        <result property="sno" column="Sno" jdbcType="LONG INTEGER"/>
        <result property="lxno" column="Lxno" jdbcType="LONG INTEGER"/>
        <result property="bmid" column="Bmid" jdbcType="LONG INTEGER"/>
        <result property="dutime" column="Dutime" jdbcType="INTEGER"/>
        <result property="ddtime" column="Ddtime" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="YlYsxxMap">
        select
          Dno, Dname, Dage, Sname, Sno, Lxno, Bmid, Dutime, Ddtime
        from db_1023.yl_ysxx
        where Dno = #{dno}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="YlYsxxMap">
        select
          Dno, Dname, Dage, Sname, Sno, Lxno, Bmid, Dutime, Ddtime
        from db_1023.yl_ysxx
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="YlYsxxMap">
        select
          Dno, Dname, Dage, Sname, Sno, Lxno, Bmid, Dutime, Ddtime
        from db_1023.yl_ysxx
        <where>
            <if test="dno != null">
                and Dno = #{dno}
            </if>
            <if test="dname != null and dname != ''">
                and Dname = #{dname}
            </if>
            <if test="dage != null">
                and Dage = #{dage}
            </if>
            <if test="sname != null and sname != ''">
                and Sname = #{sname}
            </if>
            <if test="sno != null">
                and Sno = #{sno}
            </if>
            <if test="lxno != null">
                and Lxno = #{lxno}
            </if>
            <if test="bmid != null">
                and Bmid = #{bmid}
            </if>
            <if test="dutime != null">
                and Dutime = #{dutime}
            </if>
            <if test="ddtime != null">
                and Ddtime = #{ddtime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="dno" useGeneratedKeys="true">
        insert into db_1023.yl_ysxx(Dname, Dage, Sname, Sno, Lxno, Bmid, Dutime, Ddtime)
        values (#{dname}, #{dage}, #{sname}, #{sno}, #{lxno}, #{bmid}, #{dutime}, #{ddtime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update db_1023.yl_ysxx
        <set>
            <if test="dname != null and dname != ''">
                Dname = #{dname},
            </if>
            <if test="dage != null">
                Dage = #{dage},
            </if>
            <if test="sname != null and sname != ''">
                Sname = #{sname},
            </if>
            <if test="sno != null">
                Sno = #{sno},
            </if>
            <if test="lxno != null">
                Lxno = #{lxno},
            </if>
            <if test="bmid != null">
                Bmid = #{bmid},
            </if>
            <if test="dutime != null">
                Dutime = #{dutime},
            </if>
            <if test="ddtime != null">
                Ddtime = #{ddtime},
            </if>
        </set>
        where Dno = #{dno}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from db_1023.yl_ysxx where Dno = #{dno}
    </delete>

</mapper>