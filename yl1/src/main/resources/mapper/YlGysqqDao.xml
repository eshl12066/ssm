<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slwx.dao.YlGysqqDao">

    <resultMap type="com.slwx.entity.YlGysqq" id="YlGysqqMap">
        <result property="gid" column="Gid" jdbcType="LONG INTEGER"/>
        <result property="yname" column="Yname" jdbcType="VARCHAR"/>
        <result property="yquantily" column="Yquantily" jdbcType="INTEGER"/>
        <result property="gysid" column="Gysid" jdbcType="LONG INTEGER"/>
        <result property="gtime" column="Gtime" jdbcType="TIMESTAMP"/>
        <result property="gzt" column="Gzt" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="YlGysqqMap">
        select
          Gid, Yname, Yquantily, Gysid, Gtime, Gzt
        from db_1023.yl_gysqq
        where Gid = #{gid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="YlGysqqMap">
        select
          Gid, Yname, Yquantily, Gysid, Gtime, Gzt
        from db_1023.yl_gysqq
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="YlGysqqMap">
        select
          Gid, Yname, Yquantily, Gysid, Gtime, Gzt
        from db_1023.yl_gysqq
        <where>
            <if test="gid != null">
                and Gid = #{gid}
            </if>
            <if test="yname != null and yname != ''">
                and Yname = #{yname}
            </if>
            <if test="yquantily != null">
                and Yquantily = #{yquantily}
            </if>
            <if test="gysid != null">
                and Gysid = #{gysid}
            </if>
            <if test="gtime != null">
                and Gtime = #{gtime}
            </if>
            <if test="gzt != null">
                and Gzt = #{gzt}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="gid" useGeneratedKeys="true">
        insert into db_1023.yl_gysqq(Yname, Yquantily, Gysid, Gtime, Gzt)
        values (#{yname}, #{yquantily}, #{gysid}, #{gtime}, #{gzt})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update db_1023.yl_gysqq
        <set>
            <if test="yname != null and yname != ''">
                Yname = #{yname},
            </if>
            <if test="yquantily != null">
                Yquantily = #{yquantily},
            </if>
            <if test="gysid != null">
                Gysid = #{gysid},
            </if>
            <if test="gtime != null">
                Gtime = #{gtime},
            </if>
            <if test="gzt != null">
                Gzt = #{gzt},
            </if>
        </set>
        where Gid = #{gid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from db_1023.yl_gysqq where Gid = #{gid}
    </delete>

</mapper>