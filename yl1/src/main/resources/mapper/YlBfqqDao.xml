<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slwx.dao.YlBfqqDao">

    <resultMap type="com.slwx.entity.YlBfqq" id="YlBfqqMap">
        <result property="qid" column="Qid" jdbcType="LONG INTEGER"/>
        <result property="yname" column="Yname" jdbcType="VARCHAR"/>
        <result property="yquantily" column="Yquantily" jdbcType="INTEGER"/>
        <result property="qqd" column="Qqd" jdbcType="VARCHAR"/>
        <result property="qtime" column="Qtime" jdbcType="TIMESTAMP"/>
        <result property="qnr" column="Qnr" jdbcType="VARCHAR"/>
        <result property="qzt" column="Qzt" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="YlBfqqMap">
        select
          Qid, Yname, Yquantily, Qqd, Qtime, Qnr, Qzt
        from db_1023.yl_bfqq
        where Qid = #{qid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="YlBfqqMap">
        select
          Qid, Yname, Yquantily, Qqd, Qtime, Qnr, Qzt
        from db_1023.yl_bfqq
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="YlBfqqMap">
        select
          Qid, Yname, Yquantily, Qqd, Qtime, Qnr, Qzt
        from db_1023.yl_bfqq
        <where>
            <if test="qid != null">
                and Qid = #{qid}
            </if>
            <if test="yname != null and yname != ''">
                and Yname = #{yname}
            </if>
            <if test="yquantily != null">
                and Yquantily = #{yquantily}
            </if>
            <if test="qqd != null and qqd != ''">
                and Qqd = #{qqd}
            </if>
            <if test="qtime != null">
                and Qtime = #{qtime}
            </if>
            <if test="qnr != null and qnr != ''">
                and Qnr = #{qnr}
            </if>
            <if test="qzt != null">
                and Qzt = #{qzt}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="qid" useGeneratedKeys="true">
        insert into db_1023.yl_bfqq(Yname, Yquantily, Qqd, Qtime, Qnr, Qzt)
        values (#{yname}, #{yquantily}, #{qqd}, #{qtime}, #{qnr}, #{qzt})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update db_1023.yl_bfqq
        <set>
            <if test="yname != null and yname != ''">
                Yname = #{yname},
            </if>
            <if test="yquantily != null">
                Yquantily = #{yquantily},
            </if>
            <if test="qqd != null and qqd != ''">
                Qqd = #{qqd},
            </if>
            <if test="qtime != null">
                Qtime = #{qtime},
            </if>
            <if test="qnr != null and qnr != ''">
                Qnr = #{qnr},
            </if>
            <if test="qzt != null">
                Qzt = #{qzt},
            </if>
        </set>
        where Qid = #{qid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from db_1023.yl_bfqq where Qid = #{qid}
    </delete>

</mapper>