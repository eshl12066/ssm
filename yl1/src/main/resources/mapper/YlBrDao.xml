<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slwx.dao.YlBrDao">

    <resultMap type="com.slwx.entity.YlBr" id="YlBrMap">
        <result property="pno" column="Pno" jdbcType="LONG INTEGER"/>
        <result property="pname" column="Pname" jdbcType="VARCHAR"/>
        <result property="psex" column="Psex" jdbcType="VARCHAR"/>
        <result property="page" column="Page" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="YlBrMap">
        select
          Pno, Pname, Psex, Page
        from db_1023.yl_br
        where Pno = #{pno}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="YlBrMap">
        select
          Pno, Pname, Psex, Page
        from db_1023.yl_br
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="YlBrMap">
        select
          Pno, Pname, Psex, Page
        from db_1023.yl_br
        <where>
            <if test="pno != null">
                and Pno = #{pno}
            </if>
            <if test="pname != null and pname != ''">
                and Pname = #{pname}
            </if>
            <if test="psex != null and psex != ''">
                and Psex = #{psex}
            </if>
            <if test="page != null">
                and Page = #{page}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="pno" useGeneratedKeys="true">
        insert into db_1023.yl_br(Pname, Psex, Page)
        values (#{pname}, #{psex}, #{page})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update db_1023.yl_br
        <set>
            <if test="pname != null and pname != ''">
                Pname = #{pname},
            </if>
            <if test="psex != null and psex != ''">
                Psex = #{psex},
            </if>
            <if test="page != null">
                Page = #{page},
            </if>
        </set>
        where Pno = #{pno}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from db_1023.yl_br where Pno = #{pno}
    </delete>

</mapper>