<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slwx.dao.YlZxykDao">

    <resultMap type="com.slwx.entity.YlZxyk" id="YlZxykMap">
        <result property="yno" column="Yno" jdbcType="LONG INTEGER"/>
        <result property="yname" column="Yname" jdbcType="VARCHAR"/>
        <result property="yprice" column="Yprice" jdbcType="OTHER"/>
        <result property="ylx" column="Ylx" jdbcType="LONG INTEGER"/>
        <result property="ykc" column="Ykc" jdbcType="INTEGER"/>
        <result property="ybx" column="Ybx" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="YlZxykMap">
        select
          Yno, Yname, Yprice, Ylx, Ykc, Ybx
        from db_1023.yl_zxyk
        where Yno = #{yno}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="YlZxykMap">
        select
          Yno, Yname, Yprice, Ylx, Ykc, Ybx
        from db_1023.yl_zxyk
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="YlZxykMap">
        select
          Yno, Yname, Yprice, Ylx, Ykc, Ybx
        from db_1023.yl_zxyk
        <where>
            <if test="yno != null">
                and Yno = #{yno}
            </if>
            <if test="yname != null and yname != ''">
                and Yname = #{yname}
            </if>
            <if test="yprice != null">
                and Yprice = #{yprice}
            </if>
            <if test="ylx != null">
                and Ylx = #{ylx}
            </if>
            <if test="ykc != null">
                and Ykc = #{ykc}
            </if>
            <if test="ybx != null">
                and Ybx = #{ybx}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="yno" useGeneratedKeys="true">
        insert into db_1023.yl_zxyk(Yname, Yprice, Ylx, Ykc, Ybx)
        values (#{yname}, #{yprice}, #{ylx}, #{ykc}, #{ybx})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update db_1023.yl_zxyk
        <set>
            <if test="yname != null and yname != ''">
                Yname = #{yname},
            </if>
            <if test="yprice != null">
                Yprice = #{yprice},
            </if>
            <if test="ylx != null">
                Ylx = #{ylx},
            </if>
            <if test="ykc != null">
                Ykc = #{ykc},
            </if>
            <if test="ybx != null">
                Ybx = #{ybx},
            </if>
        </set>
        where Yno = #{yno}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from db_1023.yl_zxyk where Yno = #{yno}
    </delete>

</mapper>